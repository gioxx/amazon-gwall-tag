{
  "manifest_version": 2,
  "name": "Gioxx's Wall Amazon Affiliate Tag Replacer",
  "version": "1.0.0",
  "description": "Adds/replaces the Amazon.it affiliate tag parameter on all Amazon.it URLs to support Gioxx's Wall.",
  "browser_specific_settings": {
    "gecko": {
      "id": "gioxx-wall-tag@gioxx",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "options_ui": {
    "page": "about.html",
    "browser_style": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.amazon.it/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
